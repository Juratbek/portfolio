---
import Software from "./software.astro";
import Engineer from "./engineer.astro";
---

<section class="container">
  <div class="big-text software">
    <Software />
  </div>
  <div class="big-text engineer">
    <Engineer />
  </div>
  <div class="big-text engineer outline">
    <Engineer />
  </div>
  <!-- <div class="big-text engineer outline">engineer</div> -->
  <div class="img-container">
    <img src="/public/man.png" alt="Juratbek Makhammadaliev" />
  </div>
  <div class="bottom-shadow"></div>
</section>

<style>
  .container {
    position: relative;
    height: 100vh;
    width: 100%;
    display: block;
  }

  .big-text {
    line-height: 148px;
    position: absolute;
    left: 0;
    right: 0;
    text-transform: uppercase;
    font-size: 200px;
  }

  .software {
    top: 30vh;
  }

  .engineer {
    top: 55vh;
  }

  .outline {
    z-index: 1;
    color: transparent;
    -webkit-text-stroke: 1px white;
  }

  .img-container {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 500px;
    height: 90vh;
    overflow: hidden;
  }

  .img-container img {
    width: 100%;
    object-fit: cover;
  }

  .bottom-shadow {
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    height: 100px;
    background: linear-gradient(
      0deg,
      #232323 0%,
      rgba(35, 35, 35, 0.93) 24.72%,
      rgba(35, 35, 35, 0) 100%
    );
  }
</style>
